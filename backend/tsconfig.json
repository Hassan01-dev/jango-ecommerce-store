{
  "compilerOptions": {
    "module": "es6",
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "exclude": ["node_modules", "eslint.config.js"]
}
